<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">@color/secondary</item>
        <item name="colorPrimary">@color/secondary_variant</item>
    </style>

    <style name="title_tv">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="regular_tv">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="regular_tv_white" parent="regular_tv">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="title_tv_white" parent="title_tv">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name= "register_form_tv">
    <item name="android:textColor">@color/primary</item>
    <item name="android:textSize">@dimen/register_size_tv</item>
    <item name="android:textStyle">bold</item>
    </style>
    <style name="edit_text_register">
        <item name="android:background">@drawable/ed_background</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
    </style>
</resources>